<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pic"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        android:src="@drawable/pic2" />

    <!-- There Is No Need To Make Style For This button At Styles.xml File because Its unique Button-->
    <Button
        android:id="@+id/play_button_id"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100dp"
        android:background="@color/button"
        android:fontFamily="casual"
        android:text="@string/play_the_music"
        android:textAllCaps="false"
        android:textColor="@color/play"
        android:textSize="30sp"
        android:textStyle="italic" />

</RelativeLayout>
